<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.AudiovisualInfoDetails">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:fillViewport="true">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LevelOfInfoImage" app:layout_constraintGuide_percent="0.35"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoTitleTop" app:layout_constraintGuide_percent="0.38"/>
            <ImageView
                    android:src="@drawable/target_cupula_pequeno"
                    android:layout_width="0dp"
                    android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/headerInfoImageView" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/LevelOfInfoImage"
                    android:scaleType="centerCrop" android:background="@color/googleBlueDark"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoTitle" app:layout_constraintGuide_percent="0.55"/>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/headerInfoImageView"
                    app:layout_constraintBottom_toTopOf="@+id/levelOfInfoTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:cardElevation="0dp" app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/googleLightBlueLight">
            </android.support.v7.widget.CardView>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoTitleBottom" app:layout_constraintGuide_percent="0.52"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoElementsTop" app:layout_constraintGuide_percent="0.6"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoElementsTop2" app:layout_constraintGuide_percent="0.65"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoElementsTop3" app:layout_constraintGuide_percent="0.68"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoElementsTop4" app:layout_constraintGuide_percent="0.78"/>
            <TextView
                    android:text="Titulo del audiovisual en cuestión"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/AudiovisualInfoTitleLabel"
                    app:layout_constraintStart_toStartOf="@+id/GuideInfoTitleLeading"
                    app:layout_constraintTop_toTopOf="@+id/levelOfInfoTitleTop"
                    app:layout_constraintEnd_toStartOf="@+id/guideInfoTitleTrailing"
                    app:layout_constraintBottom_toTopOf="@+id/levelOfInfoTitleBottomYear"
                    android:fontFamily="@font/roboto_medium" android:textColor="@color/negroRoto"
                    android:textSize="36sp" android:textAlignment="textStart" android:gravity="center_vertical"
            />
            <TextView
                    android:text="Año: 2018"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/AudiovisualInfoYearLabel"
                    app:layout_constraintEnd_toStartOf="@+id/guideInfoTitleTrailing"
                    app:layout_constraintTop_toTopOf="@+id/levelOfInfoTitleBottomYear"
                    app:layout_constraintStart_toStartOf="@+id/GuideInfoTitleLeading"
                    app:layout_constraintBottom_toTopOf="@+id/levelOfInfoTitleBottom"
                    android:fontFamily="@font/roboto_medium" android:textColor="@color/negroMasRoto"
                    android:gravity="center_vertical"/>
            <android.support.constraint.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelOfInfoTitleBottomYear" app:layout_constraintGuide_percent="0.47"/>
            <android.support.constraint.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/GuideInfoTitleLeading" app:layout_constraintGuide_percent="0.03"/>
            <android.support.constraint.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideInfoTitleTrailing" app:layout_constraintGuide_percent="0.97"/>
            <android.support.constraint.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideInfoMiddle1" app:layout_constraintGuide_percent="0.47"/>
            <android.support.constraint.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideInfoMiddle2" app:layout_constraintGuide_percent="0.53"/>
            <android.support.design.widget.TabLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@+id/GuideInfoTitleLeading"
                    app:layout_constraintTop_toTopOf="@+id/levelOfInfoTitle"
                    app:layout_constraintEnd_toStartOf="@+id/guideInfoTitleTrailing"
                    app:layout_constraintBottom_toTopOf="@+id/levelOfInfoElementsTop2"
                    app:tabIndicatorColor="@color/googleLightBlueLight" app:tabTextColor="@color/negroRoto"
                    app:tabRippleColor="@color/googleBlueLight" app:tabTextAppearance="@style/tab_text"
                    app:tabGravity="fill" app:tabPaddingStart="-1dp" app:tabPaddingEnd="-1dp"
                    android:id="@+id/ElementsInfoTabs" android:visibility="visible">

                <android.support.design.widget.TabItem android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content" android:text="Actores"
                                                       android:id="@+id/ActorItem"/>
                <android.support.design.widget.TabItem android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content" android:text="Directores"
                                                       android:id="@+id/DirectorItem"/>
                <android.support.design.widget.TabItem android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content" android:text="Productoras"
                                                       android:id="@+id/ProductorItem"/>
                <android.support.design.widget.TabItem android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content" android:text="Clientes"
                                                       android:id="@+id/ClientItem" android:visibility="visible"/>
            </android.support.design.widget.TabLayout>
            <android.support.v4.view.ViewPager
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@+id/GuideInfoTitleLeading"
                    app:layout_constraintTop_toTopOf="@+id/levelOfInfoElementsTop3"
                    app:layout_constraintEnd_toStartOf="@+id/guideInfoTitleTrailing"
                    app:layout_constraintBottom_toTopOf="@+id/levelOfInfoElementsTop4"
                    android:id="@+id/ElementsInfoViewPager"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>