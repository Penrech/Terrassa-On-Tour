<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MapsActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/exteriorBlue"
            app:layout_constraintDimensionRatio="W,1:4.5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >

        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline10" app:layout_constraintGuide_percent="0.2"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline16" app:layout_constraintGuide_percent="0.3"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline11" app:layout_constraintGuide_percent="0.8"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline17" app:layout_constraintGuide_percent="0.7"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline12" app:layout_constraintGuide_percent="0.07"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline13"
                app:layout_constraintGuide_percent="0.93"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline14" app:layout_constraintGuide_percent="0.79"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="W,1:1"
                android:id="@+id/imageButton2" app:layout_constraintEnd_toStartOf="@+id/guideline13"
                app:layout_constraintTop_toTopOf="@+id/guideline16"
                app:layout_constraintStart_toStartOf="@+id/guideline14"
                app:layout_constraintBottom_toTopOf="@+id/guideline17" android:background="@drawable/ic_icono_cerrar"
                android:backgroundTint="@color/blancoRoto" android:onClick="closeRutesMenu"
        />
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline15" app:layout_constraintGuide_percent="0.72"/>
        <TextView
                android:text="Rutas"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="@+id/guideline10"
                android:id="@+id/textView2"
                app:layout_constraintBottom_toTopOf="@+id/guideline11"
                app:layout_constraintStart_toStartOf="@+id/guideline12"
                app:layout_constraintEnd_toStartOf="@+id/guideline15" android:fontFamily="@font/roboto_bold"
                android:textSize="30sp" android:textColor="@color/blancoRoto" android:gravity="center_vertical"
                android:textAlignment="textStart"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>