<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AudiovisualDetailActivity" android:id="@+id/rootAudiovisualDetail">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ADTop" app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ADBottom" app:layout_constraintGuide_percent="0.95"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ADLeading" app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ADTrailing" app:layout_constraintGuide_percent="0.95"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_icono_info"
            android:id="@+id/ChangeToInfoFAB"
            app:layout_constraintTop_toTopOf="@+id/ADTop" app:layout_constraintEnd_toStartOf="@+id/ADTrailing"
            app:backgroundTint="@color/blancoRoto"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_icono_back"
            android:id="@+id/BackToCameraFAB"
            app:layout_constraintTop_toTopOf="@+id/ADTop" app:layout_constraintStart_toStartOf="@+id/ADLeading"
            app:backgroundTint="@color/blancoRoto"/>
    <android.support.v4.view.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/AudiovisualInfoPager"/>
</android.support.constraint.ConstraintLayout>