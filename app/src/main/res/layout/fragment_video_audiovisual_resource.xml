<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        tools:context=".fragments.VideoAudiovisualResource"
        android:id="@+id/rootVideo"
        android:layout_gravity="center_vertical|center_horizontal|center">

    <FrameLayout
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark"
            android:visibility="visible">

        <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:gravity="center_vertical|center_horizontal|center"
                android:keepScreenOn="true" />

    </FrameLayout>

    <ImageView
            android:id="@+id/videoBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:adjustViewBounds="true"
            android:background="@android:color/background_dark"
            android:gravity="center_vertical|center_horizontal|center"
            android:scaleType="fitCenter"
            android:visibility="visible" />

    <TextView
            android:id="@+id/errorVideoLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Oops. Algo ha ido mal.\nNo se puede reproducir el video."
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:visibility="gone" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_round_play_circle_filled_white_100"
            android:id="@+id/playPauseButton"
            android:layout_gravity="center_vertical|center_horizontal|center"/>

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:indeterminateTint="@android:color/background_light"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"/>

    <FrameLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:id="@+id/controles">

        <LinearLayout
                android:id="@+id/fullscreen_content_controls"
                style="?metaButtonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/black_overlay"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="invisible"
                tools:ignore="UselessParent">

            <TextView
                    android:id="@+id/currentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />

            <SeekBar
                    android:id="@+id/videoSeekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/colorAccent"
                    android:thumbTint="@color/colorAccent" />

            <TextView
                    android:id="@+id/totalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>