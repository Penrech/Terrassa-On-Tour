<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MultipleAudiovisualActivity" android:background="@color/googleBlueExtraLight">

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MALeadingVertical"
            app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MATrailingVertical"
            app:layout_constraintGuide_percent="0.95"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MATopHorizontal"
            app:layout_constraintGuide_percent="0.05"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_icono_back"
            android:id="@+id/closeMultipleAudiovisual"
            app:layout_constraintTop_toTopOf="@+id/MATopHorizontal"
            app:layout_constraintStart_toStartOf="@+id/MALeadingVertical" app:backgroundTint="@color/blancoRoto"/>
    <TextView
            android:text="Audiovisuales en este punto de interÃ©s"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:id="@+id/multipleAudiovisualLabel"
            app:layout_constraintStart_toEndOf="@+id/closeMultipleAudiovisual"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/MATopHorizontal"
            app:layout_constraintEnd_toStartOf="@+id/MATrailingVertical"
            android:textColor="@color/negroRoto" android:fontFamily="@font/roboto_medium" android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/closeMultipleAudiovisual" android:textAlignment="textStart"
            android:gravity="center"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/multipleAudiovisualLabel"
            android:id="@+id/multipleAudiovisualRV"
            app:layout_constraintEnd_toEndOf="parent"
    />
</android.support.constraint.ConstraintLayout>