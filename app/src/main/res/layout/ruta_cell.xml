<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintDimensionRatio="W,1:2.5"
            android:id="@+id/ruteCellRoot">

        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3" app:layout_constraintGuide_percent="0.2"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline4" app:layout_constraintGuide_percent="0.8"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline8" app:layout_constraintGuide_percent="0.50"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline9" app:layout_constraintGuide_percent="0.65"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline5" app:layout_constraintGuide_percent="0.12"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline7" app:layout_constraintGuide_percent="0.18"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline6" app:layout_constraintGuide_percent="0.94"/>
        <View
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/ruteColor" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline5" android:background="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="Ruta videografica centros enseÃ±anza"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:maxLines="2"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:id="@+id/ruteTitle" app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline6"
                android:fontFamily="@font/roboto_medium" android:textSize="18sp"
                android:textColor="@color/negroRoto"
                android:gravity="center_vertical"
                android:textAlignment="textStart"/>
        <TextView
                android:text="TextView"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:id="@+id/ruteCaracteristicas" app:layout_constraintEnd_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/guideline9"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintBottom_toTopOf="@+id/guideline4" android:gravity="center_vertical"
                android:fontFamily="@font/roboto_bold" android:textColor="@color/negroRoto"
                tools:text="Guiada, Exterior"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>